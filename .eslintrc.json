{

	"env": {
		"es6": true,
		"node": true
	},
	"ignorePatterns": [
		"build/**/*"
	],
	"overrides": [{
		"files": ["*.ts"],
		"extends": [
			"eslint:recommended",
			"airbnb-base",
			"plugin:prettier/recommended",
			"plugin:eslint-comments/recommended",
			"plugin:import/typescript",
			"plugin:@typescript-eslint/eslint-recommended",
			"plugin:@typescript-eslint/recommended",
			"plugin:@typescript-eslint/recommended-requiring-type-checking"
		],
		"parser": "@typescript-eslint/parser",
		"parserOptions": {
			"project": "./tsconfig.json"
		},
		"plugins": ["@typescript-eslint"],
		"rules": {
			"@typescript-eslint/member-ordering": 1,
			"@typescript-eslint/no-empty-function": 0,
			"@typescript-eslint/no-use-before-define": 1,
			"@typescript-eslint/prefer-nullish-coalescing": 1,
			"@typescript-eslint/prefer-optional-chain": 1,
			"@typescript-eslint/quotes": [1, "single", {"avoidEscape": true}],
			"arrow-body-style": 0,
			"import/extensions": [1, "ignorePackages", { "js": "never", "ts": "never" }],
			"import/prefer-default-export": 0,
			"lines-between-class-members": [1, "always", {"exceptAfterSingleLine": true}],
			"no-shadow": 0,
			"no-underscore-dangle": 0,
			"no-use-before-define": 0,
			"no-useless-constructor": 0,
			"prefer-arrow-callback": 0,
			"prettier/prettier": [1, {"arrowParens": "avoid", "printWidth": 120, "singleQuote": true, "trailingComma": "all"}]
		}
	}, {
		"files": ["test/**/*.js"],
		"extends": [
			"eslint:recommended",
			"airbnb-base",
			"plugin:prettier/recommended",
			"plugin:eslint-comments/recommended",
			"plugin:mocha/recommended"
		],
		"plugins": [
			"mocha"
		],
		"rules": {
			"arrow-body-style": 0,
			"func-names": 0,
			"import/extensions": [1, "ignorePackages", { "js": "never" }],
			"import/prefer-default-export": 0,
			"lines-between-class-members": [1, "always", {"exceptAfterSingleLine": true}],
			"no-underscore-dangle": 0,
			"prefer-arrow-callback": 0,
			"prettier/prettier": [1, {"arrowParens": "avoid", "printWidth": 120, "singleQuote": true, "trailingComma": "all"}]
		}
	}],
	"settings": {
		"import/resolver": {
			"node": {
				"paths": ["src"],
				"extensions": [".js", ".ts"]
			}
		},
		"import/parsers": {
			"@typescript-eslint/parser": [
				".ts"
			]
		}
	}
}
